        </gromacs>
        <!-- <initial_configuration>laststep</initial_configuration> -->
        <filelist>
            index.ndx grompp.mdp topol.top table.xvg table_a1.xvg table_b2.xvg table_a2.xvg table_a1.xvg table_a0.xvg table_d0.xvg table_d1.xvg
        </filelist>
        <!-- do so many iterations -->
        <iterations_max>50</iterations_max>
        <!-- ibi: inverse biltzmann imc: inverse monte carlo -->
        <method>ibi</method>
        <convergence_check>
            <type>default</type>
            <limit>0.001</limit>
        </convergence_check>
        <cleanlist>traj.xtc traj.trr table_a1.xvg table_b2.xvg table_a0.xvg table_a1.xvg table_a2.xvg table_d0.xvg table_d1.xvg topol.tpr</cleanlist>
